extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 分类
						th 录入时间
						th 更新
						th 删除
					tbody
						each item in categroies
							tr(class="item-id-#{item._id}")
								td #{item.name}
								td #{moment(item.meta.creatAt).format('MM/DD/YYYY')}
								td: a(target="_blank",href="../admin/#{item._id}") 修改
								td 
									button.btn.btn-danger.catedel(type="button",data-id="#{item._id}") 删除
	script(src='/js/admin.js')