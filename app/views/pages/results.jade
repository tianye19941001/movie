extends ../layout

block content
	.container
		.row
			.panel.panel-primary
				.panel-heading
					h3 #{keyword}
				.panel-body
					if movies && movies.length >0
						each item in movies
							.col-md-2
								.thumbnail
									a(href="/movie/#{item._id}")
										if item.poster.indexOf('http') > -1
											img(src="#{item.poster}",alt="#{item.title}")
										else
											img(src="upload/#{item.poster}",alt="#{item.title}")
									.caption
										h3 #{item.title}
										p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 看电影
			ul.pagination
				- for(var i = 0; i< totalPage; i++){
					- if(currenPage == (i+1)){
						li.active
							span #{currentPage}
					- }
					- else{
						li
							a(href="/results?p=#{i}&#{query}") #{i+1}
					- }
				- }